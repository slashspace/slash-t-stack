{
  "name": "@slash-kit/db",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./schema": {
      "types": "./dist/schema.d.ts",
      "import": "./dist/schema.js"
    },
    "./client": {
      "types": "./dist/client.d.ts",
      "import": "./dist/client.js"
    }
  },
  "scripts": {
    "build": "pnpm clean && tsc",
    "type-check": "tsc --noEmit",
    "lint": "biome lint src",
    "format": "biome format src --write",
    "clean": "rm -rf dist",
    "with-env": "dotenvx run -f ../../.env --",
    "db:generate": "pnpm with-env drizzle-kit generate",
    "db:migrate": "pnpm with-env drizzle-kit migrate",
    "db:push": "pnpm with-env drizzle-kit push",
    "db:pull": "pnpm with-env drizzle-kit pull",
    "db:check": "pnpm with-env drizzle-kit check",
    "db:up": "pnpm with-env drizzle-kit up",
    "db:studio": "pnpm with-env drizzle-kit studio"
  },
  "dependencies": {
    "@slash-kit/env": "workspace:*",
    "drizzle-orm": "^0.44.2",
    "pg": "^8.16.3"
  },
  "devDependencies": {
    "@types/pg": "^8.12.1",
    "drizzle-kit": "^0.31.4"
  }
}