    "@slash-kit/types": "workspace:*",
    "@slash-kit/db": "workspace:*",
    "@hono/node-server": "^1.17.1",
    "hono": "^4.8.9"
  },
  "devDependencies": {
    "pkgroll": "^2.14.5",
    "tsx": "^4.7.1"
  }
}